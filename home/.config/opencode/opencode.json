		"openai": {
			"name": "OpenAI",
			"api": "codex",
			"models": {
				"gpt-5.2": {
					"name": "GPT-5.2"
				},
				"o3": {
					"name": "o3",
					"reasoning": true
				},
				"o4-mini": {
					"name": "o4-mini",

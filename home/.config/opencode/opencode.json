					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				}
			}
		},
		"openai": {
			"name": "OpenAI",
			"models": {
				"gpt-5.2": {
					"name": "GPT-5.2"
				},
				"o3": {
					"name": "o3",
					"reasoning": true
				},
				"o4-mini": {
					"name": "o4-mini",
					"reasoning": true
				},
				"codex-1": {
					"name": "Codex-1"
				}
			}
		},
		"kimi-for-coding": {
			"name": "Kimi",
			"api": "https://api.moonshot.ai/v1",
			"models": {
				"kimi-k2.5": {
					"name": "Kimi K2.5",

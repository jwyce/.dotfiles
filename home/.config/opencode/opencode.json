						"context": 1048576,
						"output": 65535
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"antigravity-gemini-3-pro-low": {
					"name": "Gemini 3 Pro Low (Antigravity)",
					"reasoning": true,
					"attachment": true,
					"limit": {
						"context": 1048576,
						"output": 65535
					},
					"modalities": {
						"input": ["text", "image", "pdf"],

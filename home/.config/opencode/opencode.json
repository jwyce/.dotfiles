{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"shadcn": {
			"type": "local",
			"command": ["npx", "shadcn@latest", "mcp"],
			"enabled": true
		},
		"playwriter": {
			"type": "local",
			"command": ["npx", "playwriter@latest"],
			"enabled": true
		}
	},
	"plugin": [
		"oh-my-opencode",
		"opencode-antigravity-auth@1.3.2-beta.1",
		"opencode-anthropic-auth",
		"opencode-supermemory"
	],
	"provider": {
		"google": {
			"name": "Google",
			"models": {
				"antigravity-gemini-3-pro-high": {
					"name": "Gemini 3 Pro High (Antigravity)",
					"reasoning": true,
					"attachment": true,
					"limit": {
						"context": 1048576,
						"output": 65535
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"antigravity-gemini-3-pro-medium": {
					"name": "Gemini 3 Pro Medium (Antigravity)",
					"reasoning": true,
